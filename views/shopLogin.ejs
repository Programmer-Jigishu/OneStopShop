        <title>OneStopShop</title>
    </head>

    <!-- CSS -->
    <style>
      body {
          background-color: #088178;
          font-family: 'League Spartan', sans-serif;
          color: #1C1C1C;
      }

      h1 {
          color:whitesmoke;
          text-align: center;
          margin:2rem auto;
          font-size: 3rem;
          font-weight: bold;
          text-transform: uppercase;
      }

      form {
        background-color: #E5F9DB;
          max-width: 500px;
          margin: 2rem auto;
          padding: 20px;
          border-radius: 10px;
          box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }

      .form-label {
          font-weight: bold;
          font-size: 1.2rem;
      }

      .form-control {
          margin-bottom: 20px;
      }

      .btn-primary {
          background-color: #FFB347;
          border-color: #FFB347;
          font-weight: bold;
          text-transform: uppercase;
          letter-spacing: 1px;
      }

      .btn-primary:hover {
          background-color: #FFA031;
          border-color: #FFA031;
      }

      .form-check-label {
          font-weight: bold;
          margin-left: 5px;
      }


      
  </style>

    <body>
        <h1>Shopkeeper Login</h1>
        
        <form action ="/shopkeeper" method="post">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">UserName</label>
              <input type="text" class="form-control" id="userName" name="userName" aria-describedby="emailHelp">
              <div id="emailHelp" class="form-text">Do not share your Username and Password with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">I am not a Robot</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>


    </body>
</html>
