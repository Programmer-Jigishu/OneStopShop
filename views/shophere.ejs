<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script >
var myData = JSON.parse(document.getElementById("hidden").textContent);

  console.log(myData);


var arrayOfItems={}; 

const buttons = document.querySelectorAll('.add-remove');

// Loop through the buttons and add a click event listener to each
buttons.forEach((button) => {
    
  button.addEventListener('click', () => {
    // Get the id of the button that was clicked
    const buttonId = button.id;
    var quantity=parseInt(document.getElementById(buttonId.slice(1)).textContent);
    
    if(buttonId[0]=="+"){
        var add = document.getElementById(buttonId.slice(1));
        quantity = parseInt(add.textContent);
        quantity++;
        add.textContent = quantity;
    }

    if(buttonId[0]=="-"){
        var subtract = document.getElementById(buttonId.slice(1));
        quantity = parseInt(subtract.textContent);
        if(quantity>0){
        quantity--;}
        subtract.textContent = quantity;
    }
    var total = 0;
    arrayOfItems[buttonId.slice(1)] = [quantity];
    document.getElementById("cart-values").innerHTML="";
    for (const key in arrayOfItems){
        console.log(typeof(key));
        myData.forEach((element)=>{
            console.log(typeof(element["_id"]))
        if (key==element._id){
            document.getElementById("cart-values").innerHTML+=`<div class="row"><div class="col la">${element.itemName}</div><div class="col la">${arrayOfItems[key][0]}</div><div class="col la">${element.itemPrice}</div><div class="col la">${parseInt(element.itemPrice.slice(1))*arrayOfItems[key][0]}</div></div>`;
            arrayOfItems[key].push(element.itemName);
            arrayOfItems[key].push(element.itemPrice);
            total+=parseInt(element.itemPrice.slice(1))*arrayOfItems[key][0]
        }
    })
    }
    document.getElementById("total-cart").innerhtml = `<strong>${total}</strong>`;

    
// Or do whatever you want with the buttonId
  });
});

const button = document.getElementById("checkOut");

button.addEventListener("click", () => {
  const data = arrayOfItems;

  const options = {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify(data)
  };

  fetch("/shophere", options)
    .then(response => {
        window.location.href ="/checkout"
      return response.json();
    })
    .then(data => {
      console.log(data);
      alert("If you are not redirected automatically, <a href='/checkout'> click here</a>.")
    })
});


</script>
